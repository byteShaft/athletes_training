<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#d3d3d3"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:id="@+id/delegate_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp">


            <RelativeLayout
                android:id="@+id/list_logo_team_container"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame">

                <ImageView
                    android:id="@+id/players_list_logo_team"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_temp_image" />

            </RelativeLayout>

            <TextView
                android:id="@+id/players_list_title_team"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/list_logo_team_container"
                android:textSize="17sp" />

            <RelativeLayout
                android:id="@+id/players_list_shirt_number_container"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/players_list_title_team">

                <TextView
                    android:id="@+id/players_list_shirt_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="10"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>