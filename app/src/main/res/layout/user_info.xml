<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#CFD8DC">

        <!--rounded image for user's pic -->

    <com.pits.athletestraining.utils.RoundedImageView
        android:id="@+id/round_image"
        android:padding="5dp"
        android:layout_height="90dp"
        android:layout_width="80dp"
        android:src="@drawable/user_temp_image"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_height="2dp"
        android:id="@+id/view"
        android:layout_below="@+id/round_image"
        android:background="@color/colorPrimary"/>
        <ListView
            android:id="@+id/user_info_list"
            android:layout_below="@+id/view"
            android:divider="@color/colorPrimary"
            android:dividerHeight="1dip"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>
