<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#CFD8DC"
        android:orientation="vertical">

        <!--rounded image for user's pic -->

    <com.pits.athletestraining.utils.RoundedImageView
        android:id="@+id/round_image"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_height="90dp"
        android:layout_width="80dp"
        android:src="@drawable/user_temp_image"
        android:layout_gravity="center|center_horizontal"/>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/full_name"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="2dp"
            android:textSize="16sp"
            android:textColor="@android:color/widget_edittext_dark"
            android:padding="4dp"
            android:layout_margin="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/widget_edittext_dark"
            android:layout_gravity="start"
            android:id="@+id/full_name_text_view"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_text_full_name"
            android:padding="4dp"
            android:background="@drawable/edit_text_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapSentences"
            android:textCursorDrawable="@null"
            android:layout_gravity="start"
            android:visibility="gone"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="Name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:textSize="16sp"
            android:textColor="@android:color/widget_edittext_dark"
            android:layout_gravity="start"
            android:padding="4dp"
            android:layout_margin="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/widget_edittext_dark"
            android:layout_gravity="start"
            android:padding="4dp"
            android:id="@+id/name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_text_name"
            android:padding="4dp"
            android:background="@drawable/edit_text_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapSentences"
            android:textCursorDrawable="@null"
            android:layout_gravity="start"
            android:visibility="gone"
            />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Team"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:id="@+id/team_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_text_team"
                android:background="@drawable/edit_text_background"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapSentences"
                android:textCursorDrawable="@null"
                android:layout_gravity="start"
                android:visibility="gone"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Position"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:id="@+id/position_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_text_position"
                android:background="@drawable/edit_text_background"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapSentences"
                android:textCursorDrawable="@null"
                android:layout_gravity="start"
                android:visibility="gone"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Number"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:id="@+id/number_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_text_number"
                android:padding="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:layout_gravity="start"
                android:visibility="gone"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Group"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:id="@+id/group_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_text_group"
                android:padding="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapSentences"
                android:textCursorDrawable="@null"
                android:layout_gravity="start"
                android:visibility="gone"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="From"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:id="@+id/from_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_text_from"
                android:padding="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapSentences"
                android:textCursorDrawable="@null"
                android:layout_gravity="start"
                android:visibility="gone"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="To"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:id="@+id/to_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_text_to"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapSentences"
                android:textCursorDrawable="@null"
                android:layout_gravity="start"
                android:visibility="gone"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Birthday"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:padding="4dp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:id="@+id/birthday_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_text_birthday"
                android:padding="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapSentences"
                android:textCursorDrawable="@null"
                android:layout_gravity="start"
                android:visibility="gone"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Mobile No"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:padding="4dp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:id="@+id/mobile_number_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_text_mobile_number"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapSentences"
                android:textCursorDrawable="@null"
                android:layout_gravity="start"
                android:visibility="gone"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Email"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:padding="4dp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:id="@+id/email_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_text_email"
                android:padding="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@null"
                android:layout_gravity="start"
                android:visibility="gone"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Other Info"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:padding="4dp"
                android:textColor="@android:color/widget_edittext_dark"
                android:layout_gravity="start"
                android:id="@+id/info_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_text_other_info"
                android:padding="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapSentences"
                android:textCursorDrawable="@null"
                android:layout_gravity="start"
                android:visibility="gone"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/button_update"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ButtonMaterial"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:text="Update info" />
    </LinearLayout>
</ScrollView>
