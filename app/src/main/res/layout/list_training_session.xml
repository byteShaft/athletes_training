<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/session_list_header_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/team_header"
            android:gravity="center_vertical"
            android:background="@color/light_blue"
            android:textColor="@android:color/white"
            android:text="Team: Barcelona 2015-2016"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="50dp" />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_below="@+id/team_header"
            android:background="@android:color/white" />

        <TextView
            android:text="Training Sessions List"
            android:layout_below="@+id/view"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/light_blue"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/sessions_list"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/session_list_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
