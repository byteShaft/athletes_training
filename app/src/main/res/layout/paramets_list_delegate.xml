<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD8DC">

    <RelativeLayout
        android:id="@+id/spinner_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <Spinner
            android:paddingRight="10dp"
            android:id="@+id/team_players_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Select team player"
            android:id="@+id/team_players_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_below="@+id/spinner_layout"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height=".1dip">
    </View>

    <RelativeLayout
        android:layout_below="@+id/spinner_layout"
        android:id="@+id/values_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <TextView
            android:textSize="17sp"
            android:text="Parameters:"
            android:id="@+id/parameters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:textSize="17sp"
            android:text="Values"
            android:id="@+id/values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/values_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height=".1dip">
        </View>
    </RelativeLayout>

    <ListView
        android:layout_below="@+id/values_layout"
        android:id="@+id/parameters_list"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <RelativeLayout

        android:layout_alignTop="@+id/result_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="2dp">
        </View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/result_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <TextView
            android:textSize="20sp"
            android:text="Result:"
            android:id="@+id/values_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="140dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            />

        <TextView
            android:textSize="17sp"
            android:text="Sum"
            android:id="@+id/values_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="35dp"
            android:paddingBottom="5dp"/>
    </RelativeLayout>

</RelativeLayout>
